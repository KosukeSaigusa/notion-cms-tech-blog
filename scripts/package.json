{
    "name": "notion-cms-tech-blog-scripts",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "eslint --ext .ts .",
        "lint:fix": "npm run lint -- --fix",
        "lint-staged": "lint-staged",
        "export-md": "ts-node -r tsconfig-paths/register  src/export_markdowns && npm run format-md",
        "format-md": "prettier --write --ignore-path .gitignore '../exported-posts/*md'",
        "format": "prettier --write --ignore-path .gitignore './**/*.{md,js,jsx,ts,tsx,json}'"
    },
    "dependencies": {
        "@notionhq/client": "^2.2.3",
        "@types/node": "18.11.9",
        "dotenv": "^16.0.3",
        "notion-to-md": "^2.5.5",
        "typescript": "4.8.4"
    },
    "devDependencies": {
        "eslint": "8.26.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "prettier": "^2.8.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.2"
    },
    "volta": {
        "node": "16.18.1",
        "npm": "8.19.2"
    }
}
